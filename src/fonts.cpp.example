#include <TFT_eSPI.h>
#include <SPI.h>

TFT_eSPI tft = TFT_eSPI();

void demoFonts()
{
    tft.fillScreen(TFT_NAVY);
    tft.setTextColor(TFT_WHITE, TFT_NAVY);

    // Font 1 (built-in)
    tft.setTextFont(1);
    tft.setCursor(5, 5);
    tft.println("Font 1: Small");

    // Font 2 (built-in)
    tft.setTextFont(2);
    tft.setCursor(5, 20);
    tft.println("Font 2: Medium");

    // Font 4 (built-in)
    tft.setTextFont(4);
    tft.setCursor(5, 40);
    tft.println("Font 4: Large");

    // Font 6 (built-in numbers only)
    tft.setTextFont(6);
    tft.setCursor(5, 70);
    tft.println("123456");

    // Font 7 (built-in numbers only - 7 segment style)
    tft.setTextFont(7);
    tft.setCursor(5, 100);
    tft.println("789");
}

void demoSmoothFonts()
{
    tft.fillScreen(TFT_MAROON);
    tft.setTextColor(TFT_YELLOW, TFT_MAROON);

    // Load smooth font (if available)
    tft.loadFont("Arial-Bold-18");
    tft.setCursor(5, 20);
    tft.println("Smooth Font Demo");
    tft.unloadFont();

    // Different text sizes
    for (int size = 1; size <= 4; size++)
    {
        tft.setTextSize(size);
        tft.setCursor(5, 40 + (size * 15));
        tft.printf("Size %d Text", size);
    }
}

void demoTextEffects()
{
    tft.fillScreen(TFT_BLACK);

    // Rainbow text
    String text = "RAINBOW!";
    uint16_t colors[] = {TFT_RED, TFT_ORANGE, TFT_YELLOW, TFT_GREEN,
                         TFT_CYAN, TFT_BLUE, TFT_MAGENTA, TFT_PINK};

    tft.setTextFont(4);
    for (int i = 0; i < text.length(); i++)
    {
        tft.setTextColor(colors[i % 8], TFT_BLACK);
        tft.setCursor(5 + i * 25, 20);
        tft.print(text.charAt(i));
    }

    // Scrolling text effect
    tft.setTextFont(2);
    tft.setTextColor(TFT_GREEN, TFT_BLACK);
    for (int x = 240; x > -100; x -= 2)
    {
        tft.fillRect(0, 60, 240, 20, TFT_BLACK);
        tft.setCursor(x, 65);
        tft.print("Scrolling Text!");
        delay(20);
    }
}

void setup()
{
    Serial.begin(115200);

    tft.init();
    tft.setRotation(1);
    tft.fillScreen(TFT_BLACK);

    // Turn on backlight
    pinMode(4, OUTPUT);
    digitalWrite(4, HIGH);

    Serial.println("Font Demo Starting...");
}
void loop()
{
    // Demo different fonts
    demoFonts();
    delay(3000);

    // Demo smooth fonts (if available)
    demoSmoothFonts();
    delay(3000);

    // Demo text effects
    demoTextEffects();
    delay(3000);
}
